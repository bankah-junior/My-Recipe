<h1 class="pb-4 mt-4 text-4xl font-semibold">Explore Categories</h1>

<nav>
  <ol class="flex">
    <li class="mr-2"><a href="/">Home /</a></li>
    <li class="mr-2"><a href="/categories">Categories /</a></li>
    <li class="mr-4 opacity-50">Explore Categories</li>
  </ol>
</nav>

<div class="galleryGrid mb-4">
  <% if(typeof categories !== 'undefined' && categories.length > 0) { %>
    <% categories.forEach(function(category, index) { %>
      <a href="/categories/<%- category.name %>" class="text-center">
        <div class="category__img shadow">
          <img src="/img/<%- category.image %>" alt="<%- category.name %>" class="rounded-lg">
        </div>
        <div class="pt-2"><%- category.name %></div>
      </a>
    <% }) %>
  <% } %>
</div>


<div class="galleryGrid">
  <% if(typeof categoryById !== 'undefined' && categoryById.length > 0) { %>
    <% categoryById.forEach(function(recipe, index){ %>
    <a href="/recipe/<%= recipe._id %>" class="text-center">
      <div class="category__img category__img--large shadow">
        <img src="/uploads/<%= recipe.image %>" alt="<%= recipe.name %>" class="rounded-lg">
      </div>
      <div class="pt-2"><%= recipe.name %></div>
    </a>
    <% }) %>
  <% } else { %>
    <p>No items found.</p>
  <% } %>
</div>