<h1 class="pb-4 mt-4 text-4xl font-semibold">Explore Latest</h1>

<div class="galleryGrid">
  <% if(recipe != '') { %>
    <% recipe.forEach(function(recipe, index){ %>
    <a href="/recipe/<%= recipe._id %>" class="col text-center">
      <div class="shadow-lg">
        <img src="/uploads/<%= recipe.image %>" alt="<%= recipe.name %>" class="rounded-lg">
      </div>
      <div class="pt-1"><%= recipe.name %></div>
    </a>
    <% }) %>
  <% } else { %>
    <p>No items found.</p>
  <% } %> 
</div>